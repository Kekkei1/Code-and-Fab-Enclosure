#include <Servo.h>

Servo servo1;

//pin inputs for different tollerances
const int buttonPin = 13;
const int buttonPin1;
const int buttonPin2;
const int buttonPin3;
const int buttonPin4;
const int ledPin;

void setup() {

  servo1.attach(3);
  countTol = 0;
  pinMode(ledPin, OUTPUT);
}

void loop() {
  if (digitalRead(buttonPin) == HIGH){
    servo1.write(100);
  } else {
    servo1.write(90);
  }
  
  if (digitalRead(buttonPin1) == HIGH) && countTol == 0){ //Tollerance 1: Radiance
    digitalWrite(ledPin, HIGH);
    countTol += 1;
  }
  else {
    digitalWrite(ledPin, LOW);
  }

  if (digitalRead(buttonPin1) == HIGH) && countTol == 1){ //Tollerance 2:
    ...
  }

  if (digitalRead(buttonPin1) == HIGH)){
    ...
  }

  if (digitalRead(buttonPin1) == HIGH)){
    ...
  }
}
